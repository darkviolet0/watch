<!DOCTYPE html>
<html lang="fr">
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Watch" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Watch" %>">
    <meta name="keywords" content="nonprofit, community, citizens, cooperation, environment, ecology">
    <meta name="author" content="watch.coop">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'modernizr' %>
    
    <%= csrf_meta_tags %>
    <!-- favicon --> 
    <%= favicon_link_tag 'favicon.ico' %>
  </head>
  <body>
    <%= render 'layouts/navigation' %>
    <%= render 'layouts/messages' %>
        <%= yield %>
    <%= render 'layouts/footer' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
    <!-- Include jquery.min.js plugin -->
    <script src="/js/jquery-2.1.0.min.js"></script>
    
    <!-- Include email-validation.js Email Validator -->
    <script src="/js/email-validation.js"></script> 

    <script src="/js/jquery.visible.min.js"></script>

    <!-- included plugins inside  plugins.js -->
    <script src="/js/plugins.js"></script>

    <!-- included plugins inside  plugins.js -->
    <script src="/js/jquery.parallax.js"></script>        

    <!-- Include functions.js -->
    <script src="/js/functions.js"></script>

    <!-- Google Maps Script  -->
    <script src="http://maps.google.com/maps/api/js?key=AIzaSyBnzbXu9-aqom3Yy96FnlGFL2ZFU3C5r8I"></script> 

    <!-- Gmap3.js For Static Maps -->
    <script src="/js/gmap3.js"></script>

    <script type="text/javascript">

      /*---------------------- Current Menu Item -------------------------*/
      jQuery(document).ready(function($) {
        "use strict";

        $('#main-menu #headernavigation').onePageNav({
          currentClass: 'active',
          changeHash: false,
          scrollSpeed: 750,
          scrollThreshold: 0.5,
          scrollOffset: 60,
          filter: '',
          easing: 'swing'
        }); 

        $('#event_time_countdown').countDown({
          targetDate: {
            'day': 23,
            'month': 9,
            'year': 2014,
            'hour': 0,
            'min': 0,
            'sec': 0
          },
          omitWeeks: true
        });

/*----------- Google Map - with support of gmaps.js ----------------*/
        function isMobile() { 
          return ('ontouchstart' in document.documentElement);
        }

        function init_gmap() {
          if ( typeof google == 'undefined' ) return;
          var options = {
            center: [23.709921, 90.407143],
            zoom: 15,
            mapTypeControl: true,
            mapTypeControlOptions: {
              style: google.maps.MapTypeControlStyle.DROPDOWN_MENU
            },
            navigationControl: true,
            scrollwheel: false,
            streetViewControl: true
          }

          if (isMobile()) {
            options.draggable = false;
          }

          $('#googleMaps').gmap3({
            map: {
              options: options
            },
            marker: {
              latLng: [23.709921, 90.407143],
              options: { icon: 'assets/images/mapicon.png' }
            }
          });
        }

        init_gmap();
        
      });
    </script>
  </body>
</html>
