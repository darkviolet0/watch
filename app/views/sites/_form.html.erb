<%= simple_form_for(@site) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :location %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :description %>
    <%= f.association :theme %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
